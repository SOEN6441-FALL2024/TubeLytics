# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /               controllers.HomeController.index(query: String ?= null, request: Request)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)

GET     /search         controllers.YouTubeController.search(query: String)
POST    /search                 controllers.YouTubeController.search(query: String)

GET    /word-stats         controllers.YouTubeController.wordStats(query: String)
GET     /channel/:channelId       controllers.YouTubeController.channelProfile(channelId:String)

#     Showing tags for  video
GET     /tags/:videoId                   controllers.YouTubeController.showTags(videoId: String)

#     searching a special tag
GET     /search/tag/:tag                 controllers.YouTubeController.searchByTag(tag: String)

