# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /               controllers.HomeController.index(query: String ?= null)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)

GET     /search         controllers.YouTubeController.search(query: String)
POST    /search                 controllers.YouTubeController.search(query: String)
GET     /channel/:channelId       controllers.YouTubeController.channelProfile(channelId: String)



